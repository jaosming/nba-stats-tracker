        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Getting Real NBA Stats..." Height="143" Width="485"
        ResizeMode="NoResize" Closing="Window_Closing">
  <Grid>
    <ProgressBar Height="22" HorizontalAlignment="Left" Margin="12,12,0,0" Name="pb" VerticalAlignment="Top"
                 Width="439" />
    <Label Content="lblProgress" HorizontalAlignment="Center" Margin="0,43,0,0" Name="lblProgress"
           VerticalAlignment="Top" />
    <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="376,43,0,0" Name="Cancel"
            VerticalAlignment="Top" Width="75" IsCancel="True" Click="Cancel_Click" />
    <Label Content="Real NBA Stats courtesy of Basketball-Reference.com" HorizontalAlignment="Center"
           Margin="0,0,0,9" Name="label1" VerticalAlignment="Bottom" FontStyle="Italic" />
  </Grid>
</Window>