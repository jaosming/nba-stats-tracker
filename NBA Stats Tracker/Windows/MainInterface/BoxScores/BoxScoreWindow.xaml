<Window x:Class="NBA_Stats_Tracker.Windows.MainInterface.BoxScores.BoxScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:players="clr-namespace:NBA_Stats_Tracker.Data.Players"
        xmlns:teams="clr-namespace:NBA_Stats_Tracker.Data.Teams" mc:Ignorable="d"
        Title="Insert Box Score" Height="400" Width="682"
        WindowStartupLocation="CenterScreen" MinWidth="682" MinHeight="359"
        Closing="window_Closing" Loaded="window_Loaded">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" Name="tbcBoxScore" VerticalAlignment="Stretch" Margin="0"
                    SelectionChanged="tabControl1_SelectionChanged" Padding="6">
            <TabItem Header="Teams" Name="tabTeams" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                     Margin="0">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Width="645">
                    <Label Content="Please insert the box score of your latest match" HorizontalAlignment="Left"
                           Margin="12,8,0,0" Name="label1" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,37,0,0" Name="cmbTeam1"
                              VerticalAlignment="Top" Width="120" TabIndex="0"
                              SelectionChanged="cmbTeam1_SelectionChanged" />
                    <Label Content="PTS" HorizontalAlignment="Left" Margin="12,66,0,0" Name="label2"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="12,95,0,0" Name="txtPTS1"
                             VerticalAlignment="Top" Width="36" TabIndex="1" IsReadOnly="True" IsTabStop="False"
                             Background="Black"
                             Foreground="White" FontWeight="Bold" />
                    <Label Content="REB" HorizontalAlignment="Left" Margin="54,66,0,0" Name="label3"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="54,95,0,0" Name="txtREB1"
                             VerticalAlignment="Top" Width="36" TabIndex="2" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="AST" HorizontalAlignment="Left" Margin="96,66,0,0" Name="label4"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="96,95,0,0" Name="txtAST1"
                             VerticalAlignment="Top" Width="36" TabIndex="3" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="STL" HorizontalAlignment="Left" Margin="138,66,0,0" Name="label5"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="138,95,0,0" Name="txtSTL1"
                             VerticalAlignment="Top" Width="36" TabIndex="4" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="BLK" HorizontalAlignment="Left" Margin="180,66,0,0" Name="label6"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="180,95,0,0" Name="txtBLK1"
                             VerticalAlignment="Top" Width="36" TabIndex="5" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="TO" HorizontalAlignment="Left" Margin="222,66,0,0" Name="label7"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="222,95,0,0" Name="txtTO1"
                             VerticalAlignment="Top" Width="36" TabIndex="6" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FGM" HorizontalAlignment="Left" Margin="264,66,0,0" Name="label8"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="264,95,0,0" Name="txtFGM1"
                             VerticalAlignment="Top" Width="36" TabIndex="7" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreAway" />
                    <Label Content="FGA" HorizontalAlignment="Left" Margin="306,66,0,0" Name="label9"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="306,95,0,0" Name="txtFGA1"
                             VerticalAlignment="Top" Width="36" TabIndex="8" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreAway" />
                    <Label Content="3PM" HorizontalAlignment="Left" Margin="348,66,0,0" Name="label10"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="348,95,0,0" Name="txt3PM1"
                             VerticalAlignment="Top" Width="36" TabIndex="9" TextChanged="calculateScoreAway"
                             GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="3PA" HorizontalAlignment="Left" Margin="390,66,0,0" Name="label11"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="390,95,0,0" Name="txt3PA1"
                             VerticalAlignment="Top" Width="36" TabIndex="10" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreAway" />
                    <Label Content="FTM" HorizontalAlignment="Left" Margin="432,66,0,0" Name="label12"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="432,95,0,0" Name="txtFTM1"
                             VerticalAlignment="Top" Width="36" TabIndex="11" TextChanged="calculateScoreAway"
                             GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FTA" HorizontalAlignment="Left" Margin="474,66,0,0" Name="label13"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="474,95,0,0" Name="txtFTA1"
                             VerticalAlignment="Top" Width="36" TabIndex="12" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreAway" />
                    <Label Content="OREB" HorizontalAlignment="Left" Margin="516,66,0,0" Name="label14"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="516,95,0,0" Name="txtOREB1"
                             VerticalAlignment="Top" Width="36" TabIndex="13" GotFocus="bsAnyTextbox_GotFocus" />
                    <ComboBox Height="23" Margin="25,145,0,0" Name="cmbTeam2" VerticalAlignment="Top" TabIndex="15"
                              SelectionChanged="cmbTeam2_SelectionChanged" HorizontalAlignment="Left" Width="120" />
                    <Label Content="PTS" HorizontalAlignment="Left" Margin="12,175,0,0" Name="label15"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="12,204,0,0" Name="txtPTS2"
                             VerticalAlignment="Top" Width="36" TabIndex="16" IsReadOnly="True" IsTabStop="False"
                             Background="Black"
                             Foreground="White" FontWeight="Bold" />
                    <Label Content="REB" HorizontalAlignment="Left" Margin="54,175,0,0" Name="label16"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="54,204,0,0" Name="txtREB2"
                             VerticalAlignment="Top" Width="36" TabIndex="17" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="AST" HorizontalAlignment="Left" Margin="96,175,0,0" Name="label17"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="96,204,0,0" Name="txtAST2"
                             VerticalAlignment="Top" Width="36" TabIndex="18" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="STL" HorizontalAlignment="Left" Margin="138,175,0,0" Name="label18"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="138,204,0,0" Name="txtSTL2"
                             VerticalAlignment="Top" Width="36" TabIndex="19" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="BLK" HorizontalAlignment="Left" Margin="180,175,0,0" Name="label19"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="180,204,0,0" Name="txtBLK2"
                             VerticalAlignment="Top" Width="36" TabIndex="20" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="TO" HorizontalAlignment="Left" Margin="222,175,0,0" Name="label20"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="222,204,0,0" Name="txtTO2"
                             VerticalAlignment="Top" Width="36" TabIndex="21" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FGM" HorizontalAlignment="Left" Margin="264,175,0,0" Name="label21"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="264,204,0,0" Name="txtFGM2"
                             VerticalAlignment="Top" Width="36" TabIndex="22" TextChanged="calculateScoreHome"
                             GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FGA" HorizontalAlignment="Left" Margin="306,175,0,0" Name="label22"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="306,204,0,0" Name="txtFGA2"
                             VerticalAlignment="Top" Width="36" TabIndex="23" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreHome" />
                    <Label Content="3PM" HorizontalAlignment="Left" Margin="348,175,0,0" Name="label23"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="348,204,0,0" Name="txt3PM2"
                             VerticalAlignment="Top" Width="36" TabIndex="24" TextChanged="calculateScoreHome"
                             GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="3PA" HorizontalAlignment="Left" Margin="390,175,0,0" Name="label24"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="390,204,0,0" Name="txt3PA2"
                             VerticalAlignment="Top" Width="36" TabIndex="25" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreHome" />
                    <Label Content="FTM" HorizontalAlignment="Left" Margin="432,175,0,0" Name="label25"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="432,204,0,0" Name="txtFTM2"
                             VerticalAlignment="Top" Width="36" TabIndex="26" TextChanged="calculateScoreHome"
                             GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FTA" HorizontalAlignment="Left" Margin="474,175,0,0" Name="label26"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="474,204,0,0" Name="txtFTA2"
                             VerticalAlignment="Top" Width="36" TabIndex="27" GotFocus="bsAnyTextbox_GotFocus"
                             TextChanged="calculateScoreHome" />
                    <Label Content="FOUL" HorizontalAlignment="Left" Margin="558,66,0,0" Name="label27"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="558,95,0,0" Name="txtFOUL1"
                             VerticalAlignment="Top" Width="36" TabIndex="14" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="OREB" HorizontalAlignment="Left" Margin="516,175,0,0" Name="label28"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="516,204,0,0" Name="txtOREB2"
                             VerticalAlignment="Top" Width="36" TabIndex="28" GotFocus="bsAnyTextbox_GotFocus" />
                    <Label Content="FOUL" HorizontalAlignment="Left" Margin="558,175,0,0" Name="label29"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="558,204,0,0" Name="txtFOUL2"
                             VerticalAlignment="Top" Width="36" TabIndex="29" GotFocus="bsAnyTextbox_GotFocus" />
                    <Button Content="Calculate" Height="23" HorizontalAlignment="Left" Margin="315,257,0,0"
                            Name="btnCalculateTeams" VerticalAlignment="Top" Width="75" TabIndex="30"
                            Click="btnCalculateTeams_Click"
                            Visibility="Collapsed" />
                    <Button Content="Copy" Height="23" HorizontalAlignment="Left" Margin="397,257,0,0" Name="btnCopy"
                            TabIndex="30" VerticalAlignment="Top" Width="75" Click="btnCopy_Click"
                            Visibility="Collapsed" />
                    <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="561,257,0,0"
                            Name="btnCancel" TabIndex="30" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
                    <DatePicker Height="25" HorizontalAlignment="Right" Margin="0,8,4,0" Name="dtpGameDate"
                                VerticalAlignment="Top" Width="115" />
                    <Label Content="Season" Height="28" HorizontalAlignment="Right" Margin="0,7,249,0" Name="label30"
                           VerticalAlignment="Top" />
                    <CheckBox Content="Playoffs" Height="16" HorizontalAlignment="Right" Margin="0,37,4,0"
                              Name="chkIsPlayoff" VerticalAlignment="Top" Width="115" />
                    <Label Content="@" HorizontalAlignment="Left" Margin="7,145,0,0" Name="label31"
                           VerticalAlignment="Top" />
                    <CheckBox Content=" " Height="16" HorizontalAlignment="Left" Margin="7,257,0,0"
                              Name="chkDoNotUpdate" VerticalAlignment="Top">
                    </CheckBox>
                    <TextBlock Name="txbDoNotUpdate" HorizontalAlignment="Left" VerticalAlignment="Top"
                               Margin="25,248,0,0">
                        Don't update the Team Stats;
                        <LineBreak />
                        just save this Box Score
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="253,124,0,0" Name="txbT1Avg" Text=""
                               VerticalAlignment="Top" Width="339" />
                    <TextBlock HorizontalAlignment="Left" Margin="253,233,0,0" Name="txbT2Avg" Text=""
                               VerticalAlignment="Top" Width="339" />
                    <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,8,130,0" Name="cmbSeasonNum"
                              VerticalAlignment="Top" Width="114" SelectionChanged="cmbSeasonNum_SelectionChanged" />
                    <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="478,257,0,0" Name="btnOK"
                            TabIndex="30" VerticalAlignment="Top" Width="75" Click="btnOK_Click" FontWeight="Bold" />
                    <Label Content="MINS" HorizontalAlignment="Left" Margin="600,66,0,0" Name="label32"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="600,95,0,0" Name="txtMINS1" TabIndex="14"
                             VerticalAlignment="Top" Width="36" TextChanged="txtMINS1_TextChanged"
                             IsKeyboardFocusedChanged="any_ShowToolTip">
                        <TextBox.ToolTip>
                            <ToolTip>
                                You should enter the game length, not the total minutes played by all players (e.g. 48, not 240)
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Content="MINS" HorizontalAlignment="Left" Margin="600,175,0,0" Name="label33"
                           VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="600,204,0,0" Name="txtMINS2" TabIndex="29"
                             VerticalAlignment="Top" Width="36" TextChanged="txtMINS2_TextChanged"
                             IsKeyboardFocusedChanged="any_ShowToolTip">
                        <TextBox.ToolTip>
                            <ToolTip>
                                You should enter the game length, not the total minutes played by all players (e.g. 48, not 240)
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Button Content="Paste" Height="23" HorizontalAlignment="Left" Margin="478,257,0,0" Name="btnPaste"
                            TabIndex="30" VerticalAlignment="Top" Width="75" Visibility="Collapsed"
                            Click="btnPaste_Click" />
                    <Button Content="Tools" Height="23" HorizontalAlignment="Left" Margin="368,257,0,0" Name="btnTools"
                            VerticalAlignment="Top" Width="75"
                            PreviewMouseLeftButtonDown="btnTools_PreviewMouseLeftButtonDown">
                        <Button.ContextMenu>
                            <ContextMenu Name="cxmTools">
                                <MenuItem Header="Calculate Team Stats by summing Player Stats"
                                          Click="btnCalculateTeams_Click" />
                                <MenuItem Header="Calculate Player Stats from Play By Play"
                                          Click="btnCalculateFromPBP_Click" />
                                <MenuItem Header="Check if Team Stats and Player Stats match"
                                          Click="btnCompareTeamAndPlayerStats_Click" />
                                <MenuItem Header="Copy" Click="btnCopy_Click" />
                                <MenuItem Header="Paste" Click="btnPaste_Click" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Away Team" Name="tabTeam1">
                <Grid>
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              Name="dgvPlayersAway" VerticalAlignment="Stretch" CanUserAddRows="False"
                              CanUserDeleteRows="False" FrozenColumnCount="1"
                              Sorting="statColumn_Sorting" d:DataContext="{d:DesignInstance players:PlayerBoxScore}"
                              RowEditEnding="anyPBSDataGrid_RowEditEnding"
                              CellEditEnding="anyPBSDataGrid_CellEditEnding">
                        <DataGrid.Columns>
                            <DataGridComboBoxColumn Header="Player"
                                                    SelectedValueBinding="{Binding PlayerID, UpdateSourceTrigger=PropertyChanged}"
                                                    SelectedValuePath="Key" DisplayMemberPath="Value"
                                                    SortMemberPath="Name" x:Name="colPlayerAway"
                                                    CopyingCellClipboardContent="colPlayerAway_CopyingCellClipboardContent" />
                            <DataGridCheckBoxColumn Header="Starter" Binding="{Binding IsStarter}" />
                            <DataGridCheckBoxColumn Header="Injured" Binding="{Binding PlayedInjured}" />
                            <DataGridCheckBoxColumn Header="DNP" Binding="{Binding IsOut}" />
                            <DataGridTextColumn Binding="{Binding MINS, Mode=TwoWay}" Header="MINS" />
                            <DataGridTextColumn Binding="{Binding PTS, Mode=TwoWay}" Header="PTS" IsReadOnly="True" />
                            <DataGridTextColumn Binding="{Binding REB, Mode=TwoWay}" Header="REB" />
                            <DataGridTextColumn Binding="{Binding AST, Mode=TwoWay}" Header="AST" />
                            <DataGridTextColumn Binding="{Binding STL, Mode=TwoWay}" Header="STL" />
                            <DataGridTextColumn Binding="{Binding BLK, Mode=TwoWay}" Header="BLK" />
                            <DataGridTextColumn Binding="{Binding TOS, Mode=TwoWay}" Header="TO" />
                            <DataGridTextColumn Binding="{Binding FGM, Mode=TwoWay}" Header="FGM" />
                            <DataGridTextColumn Binding="{Binding FGA, Mode=TwoWay}" Header="FGA" />
                            <DataGridTextColumn Binding="{Binding FGp, StringFormat=F3, Mode=TwoWay}" Header="FG%"
                                                IsReadOnly="True"
                                                CopyingCellClipboardContent="percentageColumn_CopyingCellClipboardContent" />
                            <DataGridTextColumn Binding="{Binding TPM, Mode=TwoWay}" Header="3PM" />
                            <DataGridTextColumn Binding="{Binding TPA, Mode=TwoWay}" Header="3PA" />
                            <DataGridTextColumn Binding="{Binding TPp, StringFormat=F3, Mode=TwoWay}" Header="3P%"
                                                IsReadOnly="True"
                                                CopyingCellClipboardContent="percentageColumn_CopyingCellClipboardContent" />
                            <DataGridTextColumn Binding="{Binding FTM, Mode=TwoWay}" Header="FTM" />
                            <DataGridTextColumn Binding="{Binding FTA, Mode=TwoWay}" Header="FTA" />
                            <DataGridTextColumn Binding="{Binding FTp, StringFormat=F3, Mode=TwoWay}" Header="FT%"
                                                IsReadOnly="True"
                                                CopyingCellClipboardContent="percentageColumn_CopyingCellClipboardContent" />
                            <DataGridTextColumn Binding="{Binding OREB, Mode=TwoWay}" Header="OREB" />
                            <DataGridTextColumn Binding="{Binding FOUL, Mode=TwoWay}" Header="FOUL" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Away Metric Stats" Name="tabAwayMetric">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <DataGrid Style="{StaticResource DataGridStyle}" AutoGenerateColumns="False" FrozenColumnCount="2"
                              HorizontalAlignment="Stretch" Margin="6,6,6,3" Name="dgvAwayPlayerMetricStats"
                              VerticalAlignment="Stretch" IsReadOnly="True"
                              Sorting="statColumn_Sorting" Grid.Row="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding TeamFDisplay}" Header="Team" />
                            <DataGridTemplateColumn Header="PER" x:Name="dgvMetricAwayPERColumn" SortMemberPath="PER"
                                                    ClipboardContentBinding="{Binding PER}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PER, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Player Efficiency Rating; in the words of its creator, ESPN.com columnist John Hollinger, 'the PER sums up all a player's positive accomplishments, subtracts the negative accomplishments, and returns a per-minute rating of a player's performance.'"
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="EFF" x:Name="dgvMetricAwayEFFColumn" SortMemberPath="EFF"
                                                    ClipboardContentBinding="{Binding EFF}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EFF, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Efficiency; an all-around measure of every aspect of the player's performance compared to the rest of the league."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="ORTG" SortMemberPath="ORTG"
                                                    ClipboardContentBinding="{Binding ORTG}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ORTG, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Offensive Rating; a metric created by Dean Oliver that estimates how many points a player produces per hundred individual possessions."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="DRTG" SortMemberPath="DRTG"
                                                    ClipboardContentBinding="{Binding DRTG}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DRTG, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Defensive Rating; a metric created by Dean Oliver that estimates how many points a player allows per hundred individual possessions."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="RTGd" SortMemberPath="RTGd"
                                                    ClipboardContentBinding="{Binding RTGd}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RTGd, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Rating Differential; the difference between a player's offensive and defensive ratings, giving an estimate of how many more points a player produces rather than allows every hundred individual possessions."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Floor%" SortMemberPath="Floorp"
                                                    ClipboardContentBinding="{Binding Floorp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Floorp, StringFormat=F3}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Floor Percentage; the percentage of the time a player wants to score and actually scores."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="GmSc" SortMemberPath="GmSc"
                                                    ClipboardContentBinding="{Binding GmSc}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GmSc, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Game Score; a linear calculation of the player's performance."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="GmScE" SortMemberPath="GmScE"
                                                    ClipboardContentBinding="{Binding GmScE}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GmScE, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Game Score Efficiency; a linear calculation of the player's performance, adjusted to their minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="TS%" SortMemberPath="TSp"
                                                    ClipboardContentBinding="{Binding TSp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TSp, StringFormat=F3}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="True Shooting Percentage; a measure of shooting effeciency that takes into account 2-point field goals, 3-point field goals, and free throws."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="EFG%" SortMemberPath="EFGp"
                                                    ClipboardContentBinding="{Binding EFGp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EFGp, StringFormat=F3}">
                                            <TextBlock.ToolTip>
