<Window x:Class="NBA_Stats_Tracker.Windows.MainInterface.Teams.ConferenceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Edit Conference" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="56,12,12,0" Name="txtName" VerticalAlignment="Top" />
        <Label Content="List of Divisions (One per line)" HorizontalAlignment="Left" Margin="12,41,0,0" Name="label2"
               VerticalAlignment="Top" />
        <TextBox Margin="12,70,12,41" Name="txtDivisions" AcceptsReturn="True" />
        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnOK"
                VerticalAlignment="Bottom" Width="75" Click="btnOK_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="btnCancel"
                VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>